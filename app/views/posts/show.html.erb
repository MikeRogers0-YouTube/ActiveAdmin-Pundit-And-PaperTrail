<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Published:</strong>
  <%= @post.published? %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Publish', [:new, @post, :publish_forms] if policy(Post::PublishForm.new(post: @post)).create? %> |
<%= link_to 'Back', posts_path %>
